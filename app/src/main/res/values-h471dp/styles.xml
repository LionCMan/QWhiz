<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    // Universal Versions Below.....................................................................

    <style name="cardViewLinear">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="image">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/weight0</item>
        <item name="android:layout_weight">1</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:src">@drawable/sadsheldon</item>
        <item name="android:contentDescription">@string/contentSheldon</item>
    </style>

    // Portrait Versions Below......................................................................

    <style name="questionNoP">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/textSize24</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingBottom">@dimen/padding8</item>
        <item name="android:paddingTop">@dimen/padding16</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <style name="buttonLayoutP">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:paddingLeft">@dimen/padding16</item>
        <item name="android:paddingBottom">@dimen/padding16</item>
        <item name="android:paddingRight">@dimen/padding16</item>
    </style>

    <style name="buttonBottomP">
        <item name="android:layout_width">@dimen/weight0</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">@dimen/textSize16</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <style name="cardViewP">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_margin">@dimen/margin16</item>
    </style>

    <style name="topicP">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:padding">@dimen/padding16</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/textSize16</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="questionTextP">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/padding16</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/textSize16</item>
    </style>

    <style name="lineP">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/lineHeight1</item>
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="android:layout_marginBottom">@dimen/margin8</item>
    </style>

    <style name="radioGroupP">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/margin8</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="radioButtonP">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/padding8</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">@dimen/textSize16</item>
    </style>

    <style name="editTextP">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/margin16</item>
        <item name="android:layout_marginRight">@dimen/margin16</item>
        <item name="android:layout_marginBottom">@dimen/margin16</item>
        <item name="android:inputType">textCapWords</item>
        <item name="android:textSize">@dimen/textSize16</item>
    </style>

    <style name="checkLinearP">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_marginRight">@dimen/margin16</item>
        <item name="android:layout_marginBottom">@dimen/margin8</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="checkBoxP">
        <item name="android:layout_width">@dimen/checkBox120</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/margin16</item>
        <item name="android:paddingLeft">@dimen/padding8</item>
        <item name="android:textSize">@dimen/textSize16</item>
    </style>

    <style name="youreDoneP">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingBottom">@dimen/padding8</item>
        <item name="android:paddingTop">@dimen/padding16</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">@dimen/textSize24</item>
    </style>

</resources>
